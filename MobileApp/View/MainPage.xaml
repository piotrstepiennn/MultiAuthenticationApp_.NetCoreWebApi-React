<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MobileApp.ViewModel"
             x:Class="MobileApp.MainPage"
             x:DataType="viewmodel:LoginViewModel"
             Title="{Binding Title}">
    

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Login Page!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label Text="E-mail:"></Label>
            <Entry BackgroundColor="Gray" x:Name="textEmail" Text="{Binding Email,Mode=TwoWay}"></Entry>

            <Label Text="MobileApp Password:"></Label>
            <Entry BackgroundColor="Gray" x:Name="textAppPassword" Text="{Binding MobileAppPassword,Mode=TwoWay}"></Entry>

            <Button
                x:Name="LoginBtn"
                Text="Login"
                SemanticProperties.Hint="Login to get authentication code."
                Command="{Binding LoginCommand}"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
